  },
  "dependencies": {
    "mailparser": "^3.7.4",
    "pushover-notifications": "^1.2.3",
    "smtp-server": "^3.13.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.9.0",
    "@types/smtp-server": "^3.5.12",
    "conventional-changelog-angular": "^8.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^30.0.5",
    "semantic-release": "^24.2.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
