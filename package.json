{
  "name": "smtp-pushover",
  "version": "1.2.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "debug": "node --inspect-brk dist/index.js",
    "test": "jest --passWithNoTests",
