name: Super-Linter

on:
  pull_request:
    branches: [ main ]
  push:
    branches: [ main ]

jobs:
  lint:
    name: Lint Code Base
    runs-on: ubuntu-latest
    permissions:
      contents: read
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Run Super-Linter
        uses: super-linter/super-linter@v7.4.0
        env:
          VALIDATE_TS: true
          VALIDATE_JS: true
          VALIDATE_MD: true
          VALIDATE_YML: true
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
